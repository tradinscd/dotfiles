#! /bin/bash

# This is a script set as a global keybind. It play/pauses ncmpcpp if mpv isn't running, and play/pauses mpv if it is
# running (while keeping ncmpcpp paused).

pgrep mpv
if [ $? -ne 0 ]
then
    ncmpcpp toggle
else
    echo "cycle pause" > ~/bin/config/mpv-control
    ncmpcpp pause
fi
