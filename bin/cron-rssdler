#! /bin/bash

# This is a script for a cronjob which keeps the specified program always running.

export DISPLAY=:0

program="rssdler"
command=$(rssdler -c /home/nil/.config/rssdler/config.txt -d)

if ps ax | grep -v grep | grep $program > /dev/null
    then
        exit
    else
    $command
fi
exit
