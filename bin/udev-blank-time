#! /bin/bash

# This is a script for a udev rule. It changes the display's blank time, triggered whenever power_supply is connected
# or disconnected.

export XAUTHORITY=/home/nil/.Xauthority
export DISPLAY=:0

sleep 2
batstatus=$(acpi -b | sed -n "1p" | awk -F "[, ]" '{print $3}')

if [ "$batstatus" == "Discharging" ]; then
    xset s 300 300
else
    xset s 1800 1800
fi
