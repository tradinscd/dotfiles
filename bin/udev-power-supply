#!/bin/bash
# Changes the display's blank time, triggered whenever power_supply is connected
# or disconnected. This is a script for a udev rule and startup.

export XAUTHORITY=/home/dvt/.Xauthority
export DISPLAY=:0

sleep 2
batstatus=$(acpi -b | sed -n "1p" | awk -F "[, ]" '{print $3}')

if [ "$batstatus" == "Discharging" ]; then
    xset -dpms; xset s 300 300
else
    xset -dpms; xset s 1800 1800
fi
