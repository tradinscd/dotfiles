#! /bin/bash

# This is a script set as a keybind in mpv. It allows me to do multiple commands simultaneously.
# Note: Using ";" directly in input.conf keybinds does not always work.

echo "playlist_clear" > ~/bin/config/mpv-control
echo 'loadlist "/home/nil/.mpv/playlist" append' > ~/bin/config/mpv-control
echo 'show_text "Reloaded"' > ~/bin/config/mpv-control
