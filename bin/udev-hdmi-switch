#! /bin/bash

# This is a script for a udev rule. It changes audio and video output, triggered whenever HDMI1 is connected or
# disconnected.

export XAUTHORITY=/home/nil/.Xauthority
export DISPLAY=:0

hdmi_status=$(cat /sys/class/drm/card0-HDMI-A-1/status)
alsa_dir=/home/nil/bin/config

# Change audio output.
# Commented, because I'd rather do this manually through my 'audio-output' script.
#if [[ -n $hdmi_status ]] && [[ -f $alsa_dir/asound.hdmi ]]; then
#    ln -sf $alsa_dir/asound.hdmi /home/nil/.asoundrc
#else
#    ln -sf $alsa_dir/asound.laptop /home/nil/.asoundrc
#fi

# Change video output.
if [ "${hdmi_status}" = connected ]; then
    xrandr --output LVDS1 --auto --primary --output HDMI1 --auto --mode 1920x1080 --left-of LVDS1
else
    xrandr --output HDMI1 --off
fi
