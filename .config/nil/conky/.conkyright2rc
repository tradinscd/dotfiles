# This is a conky script that is right-aligned on my external display's panel. It displays mpv and mpd info.

background yes
out_to_console yes
out_to_x no
update_interval 1
update_interval_on_battery 10

TEXT
${exec /home/nil/.config/nil/conky/scripts/now-playing-mpv}${exec /home/nil/.config/nil/conky/scripts/now-playing-mpd} ^fg()
